@model  DSC.SmartMarket.WebApp.Models.CadastrarUsuarioViewModel
@{
    ViewBag.Title = "Cadastrar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="row borderbox">
    <h2>Novo Cadastro</h2>
    <div>
        @using (Html.BeginForm("Cadastrar", "Usuario", FormMethod.Post, new { @class = "form-horizontal", id = "usuariocadastrarform" }))
        {
            <div class="form-group">
                @Html.LabelFor(model => model.Nome, "Nome:*", new { @class = "control-label col-sm-2" })
                <div class="col-sm-5">
                    @Html.TextBoxFor(model => model.Nome, new { placeholder = "Digite o Nome", @class = "form-control", required = "required", type = "text" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Email, "E-mail:*", new { @class = "control-label col-sm-2" })
                <div class="col-sm-3">
                    @Html.TextBoxFor(model => model.Email, new { placeholder = "Digite o Email", @class = "form-control", required = "required", type = "email" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.EmailConfirmacao, "Confirmação do E-mail:*", new { @class = "control-label col-sm-2" })
                <div class="col-sm-3">
                    @Html.TextBoxFor(model => model.EmailConfirmacao, new { placeholder = "Confirme o Email", @class = "form-control", required = "required", type = "email" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Senha, "Senha:*", new { @class = "control-label col-sm-2" })
                <div class="col-sm-3">
                    @Html.PasswordFor(model => model.Senha, new { placeholder = "Digite a Senha", @class = "form-control", required = "required" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.SenhaConfirmacao, "Confirmação de Senha:*", new { @class = "control-label col-sm-2" })
                <div class="col-sm-3">
                    @Html.PasswordFor(model => model.SenhaConfirmacao, new { placeholder = "Digite a Confirmação da Senha", @class = "form-control", required = "required" })
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-offset-2 col-sm-5">
                    <span style="font-size: smaller;">* Campos de preenchimento obrigatório.</span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-5">
                    <button type="submit" class="btn btn-default btn-primary" id="btnenviar">Confirmar</button>
                    <button type="button" class="btn" onclick="javascript:window.location='@Url.Action("Index", "Home")'">Voltar</button>
                </div>
            </div>
        }
    </div>
</section>
<section class="row errorbox">
    @Html.ValidationSummary("Por favor verifique os seguinte(s) erro(s) abaixo:")
</section>