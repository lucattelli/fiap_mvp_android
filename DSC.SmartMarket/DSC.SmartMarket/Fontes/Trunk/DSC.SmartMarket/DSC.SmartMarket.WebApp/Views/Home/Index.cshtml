@model  DSC.SmartMarket.WebApp.Models.LoginHomeViewModel
@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="row borderbox">
    <h2>Login</h2>
    <div>
        @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "form-horizontal", id = "loginForm" }))
        {
            <div class="form-group row">
                @Html.LabelFor(model => model.Email, "Email:*", new { @class = "control-label col-sm-2" })
                <div class="col-sm-5">
                    @Html.TextBoxFor(model => model.Email, new { placeholder = "Digite o Email", @class = "form-control", required = "required", type = "email" })
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(model => model.Senha, "Senha:*", new { @class = "control-label col-sm-2" })
                <div class="col-sm-5">
                    @Html.PasswordFor(model => model.Senha, new { placeholder = "Digite a Senha", @class = "form-control", required = "required" })
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-offset-2 col-sm-5">
                    <span style="font-size: smaller;">* Campos de preenchimento obrigatório.</span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-offset-2 col-sm-8">
                    <button type="submit" class="btn btn-default btn-primary">Enviar</button>
                    <button type="button" class="btn" onclick="javascript:window.location='@Url.Action("Cadastrar", "Usuario")'">Novo Cadastro</button>
                    <button type="button" class="btn" onclick="javascript:window.location='@Url.Action("SenhaRedefinir", "Usuario")'">Esqueci minha senha</button>
                </div>
            </div>
        }
    </div>
</section>
<section class="row borderbox">
    <p>Caro professsor, por favor utilize o usuário "lucas@produweb.com.br" e a senha "123456" para testar a aplicação.</p>
</section>
<section class="row errorbox">
    @Html.ValidationSummary( "Por favor verifique os seguinte(s) erro(s) abaixo:")
</section>
